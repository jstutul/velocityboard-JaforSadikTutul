@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }
        .card-header {
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
            color: #2575fc;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #2575fc;
        }
        .btn-primary {
            background: #6a11cb;
            border: none;
        }
        .btn-primary:hover {
            background: #2575fc;
        }
        .text-danger {
            margin-top: 10px;
            text-align: center;
        }
        /*--------------------------------------------------------------
        # Loader
        --------------------------------------------------------------*/
        #loader {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 9999;
            overflow: hidden;
            background: #fff;
        }

            #loader:before {
                content: "";
                position: fixed;
                top: calc(50% - 0px);
                left: calc(50% - 30px);
                border: 6px solid #f3f3f3;
                border-top-color: var(--bs-primary);
                border-bottom-color: var(--bs-primary);
                border-radius: 50%;
                width: 60px;
                height: 60px;
                animation: animate-loader 1s linear infinite;
            }

        @@keyframes animate-loader {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card p-4">
                    <div class="card-header">
                        Login
                    </div>
                    <div class="card-body">
                        <div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Username</label>
                                <input type="text" name="email" id="email" class="form-control" placeholder="Enter your email" required />
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
                            </div>
                            <div class="d-grid">
                                <button type="submit" id="loginBtn" class="btn btn-primary btn-block">Login</button>
                            </div>
                        </div>
                        <div class="mt-3 text-center">
                            <a href="#" class="text-decoration-none">Forgot Password?</a>
                        </div>
                        <div class="mt-2 text-center">
                            <span>Don't have an account? <a href="#" class="text-decoration-none">Sign Up</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loader"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        $(document).ready(function () {
             $("#loader").hide();
            $(document).on("click","#loginBtn",function (e) {
                var email = $("#email").val();
                var password = $("#password").val();
                 $("#loader").show();
                $.ajax({
                    url: "@Url.Action("Login","Account")",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ email: email, password: password }),
                    success: function (response) {
                         $("#loader").hide();
                        if (response.token) {
                            sessionStorage.setItem("JWToken", response.token);
                            window.location.href = '@Url.Action("Index", "Project")';
                        } else {
                            $("#loginError").text("Invalid login response");
                        }
                    },
                    error: function (xhr) {
                        if (xhr.responseJSON && xhr.responseJSON.title) {
                            $("#loginError").text(xhr.responseJSON.title);
                        } else {
                            $("#loginError").text("Login failed. Please check credentials.");
                        }
                    }
                });
            });
        });
    </script>

</body>
</html>
